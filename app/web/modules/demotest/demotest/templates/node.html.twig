{%
  set classes = [
    'node',
    'node--type-' ~ node.bundle|clean_class,
    node.isPromoted() ? 'node--promoted',
    node.isSticky() ? 'node--sticky',
    not node.isPublished() ? 'node--unpublished',
    view_mode ? 'node--view-mode-' ~ view_mode|clean_class,
    'clearfix',
  ]
%}
{{ attach_library('classy/node') }}
{{ attach_library('demotest/custom') }}
<article{{ attributes.addClass(classes) }}>
  <header>
    {{ title_prefix }}
    {% if not page %}
      <h2{{ title_attributes.addClass('node__title') }}>
        <a href="{{ url }}" rel="bookmark">{{ label }}</a>
      </h2>
    {% endif %}
    {{ title_suffix }}
    {% if display_submitted %}
      {% if content_type == 'by_line' %}
        <div class="node__meta">
          <div class="by-line__container-inline">
            <div class="by-line__items by-line__author">
              <span{{ author_attributes }}>
                {% trans %}By {{ author_name }}{% endtrans %}
              </span>
            </div>
            <div class="by-line__items by-line__picture">{{ author_picture }}</div>
            <div class="by-line__items by-line__date">
              <span{{ author_attributes }}>
                {% trans %} on {{ date }}{% endtrans %}
              </span>
            </div>
          </div>
          {{ metadata }}
        </div>
      {% else %}
        <div class="node__meta">
          {{ author_picture }}
          <span{{ author_attributes }}>
            {% trans %}Submitted by {{ author_name }} on {{ date }}{% endtrans %}
          </span>
          {{ metadata }}
        </div>
      {% endif %}
    {% endif %}
  </header>
  <div{{ content_attributes.addClass('node__content', 'clearfix') }}>
    {{ content }}
  </div>
</article>